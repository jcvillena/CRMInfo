@page "/"
@namespace CRMInfo.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Globalization
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Http
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CRMInfo</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/blazing berry/bootstrap.min.css">
    <link href="css/site.css" rel="stylesheet" />

    <link href="_content/DevExpress.Blazor/dx-blazor.css" rel="stylesheet" />
    <script type="text/javascript" src="site.js"></script>
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" param-Referer="@(HttpContext.Request.Headers["HTTP_REFERER"].ToString() ?? "")" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            Se ha producido un erro. Esta aplicación no funcionará hasta que se cargada de nuevo
        </environment>
        <environment include="Development">
            Se ha producido un error. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
